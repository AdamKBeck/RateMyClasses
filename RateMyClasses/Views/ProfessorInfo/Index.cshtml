@model IEnumerable<RateMyClasses.Models.Review>

<h2>@ViewData["Title"]</h2>
<p>@ViewData["Message"]</p>

<div> 
    <table class="table"id="professorReviews">
        <thead>
        <tr>
            <th width="40px;" align="left">
                CourseId
            </th>
            <th width="450px" align="left">
                Description
            </th>
            <th width="40px" align="left">
                Score
            </th>
        </tr>
            </thead>
            <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="75px;" align="left">@item.courseId</td>
                <td width="75px;" align="left">@item.description</td>
                <td width="75px;" align="left">@item.score</td>
            </tr>
        }
            </tbody>
    </table>

<div>
    <a asp-controller="Popular" asp-action="Index"> Back </a> 
</div>
    
</div>